ModalScreen {
    align: center middle;

    Container {
        width: 60;

        border: double $accent;
        background: $surface;

        border-title-background: $accent;
        border-title-style: bold;
        border-title-color: $background;

        border-subtitle-style: italic;
    }
}

DashboardScreen {

    Container {
        border: double $primary;
        background: $surface;

        border-title-background: $primary;
        border-title-style: bold;
        border-title-color: $background;

        border-subtitle-style: italic;

        layout: grid;
        grid-gutter: 1;
        grid-size: 12 15;

        padding: 1;

        LogoView {
            column-span: 2;
            row-span: 4;
            margin: 2 0;
        }

        MonthlyChartView {
            border: round $primary;

            column-span: 10;
            row-span: 6;
        }

        BalanceView {
            column-span: 2;
            row-span: 2;

            border: round $primary;
            height: 100%;
            text-align: right;
        }

        PayMonthView {
            border: round $primary;
            column-span: 2;
            row-span: 2;
        }

        SpendingLastMonthChartView {
            border: round $primary;
            column-span: 4;
            row-span: 9;
        }

        TopCategoriesTableView {
            border: round $primary;
            column-span: 3;
            row-span: 5;
        }

        TopMerchanatsTableView {
            border: round $primary;
            column-span: 3;
            row-span: 5;
        }

        DaysLeftView {
            border: round $primary;
            column-span: 2;
            row-span: 2;
        }

        LatestTransactionsView {
            border: round $primary;
            column-span: 10;
            row-span: 5;
            border: round $primary;
        }

        TBCView {
            border: round $primary;
            column-span: 2;
            row-span: 2;
        }


    }
}

SQLScreen {
    Container {
        border: double $secondary;
        background: $surface;

        border-title-background: $secondary;
        border-title-style: bold;
        border-title-color: $background;

        border-subtitle-style: italic;

        layout: grid;
        padding: 1;
        grid-size: 2 2;
        grid-columns: 2fr 3fr;
        grid-rows: 1fr;
        grid-gutter: 1;

        CodeEditorView {
            border: round $secondary;
            row-span: 2;

            Button {
                margin: 1;
            }
        }

        CustomSQLChartView {
            border: round $secondary;
            height: 100%;
        }

        CustomSQLTableView {
            border: round $secondary;
            height: 100%;
        }
    }
}

QuitModalScreen {

    Container {
        height: 8;

        Label {
            height: 1fr;
            width: 1fr;
            content-align: center middle;
        }
    }
}

SettingsScreen {
    Container {
        height: 22;
        layout: grid;
        grid-size: 2 3;
        grid-columns: 3fr 2fr;
        grid-rows: 1fr;
        grid-gutter: 1;
        padding: 1;

        Input {
            border: round $accent;
            border-title-style: bold;
            padding: 1 2;
            height: 5;
        }

        Select {
            border: round $accent;
            border-title-style: bold;
            height: 5;
        }

        SpreadsheetIdInput {
            column-span: 2;
        }

        CredentialsPathInput {
            column-span: 2;
        }

        PayDayTypeSelect {
            align: left middle;
            padding: 0 2;

            OptionsList {
                border: round $accent;
            }
        }
    }
}

SettingsErrorScreen {
    align: center middle;

    Container {
        padding: 0 1;
        height: 10;
        width: 50;
        content-align: center middle;

        Label {
            height: 1fr;
            width: 1fr;
            content-align: center middle;
        }
    }
}
